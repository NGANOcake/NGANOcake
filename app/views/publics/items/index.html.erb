<main class="contianer">
  <div class="row">
       <table class="col-md-2 offset-md-1 border">
        <tr class="border"><th>ジャンル検索</th></tr>
        <tr><td>ケーキ</td></tr>
        <tr><td>焼き菓子</td></tr>
        <tr><td>プリン</td></tr>
      </table>
      <div class="col-md-7 offset-md-1">
        <h1>商品一覧(全件)</h1>
        <div class="contianer">
          <div class="row">
              <% @items.each do |item| %>
              <table class="col-md-2">
             <tr><th><%= link_to image_tag item.get_image, publics_items_show_path(item.id) %></th></tr>
             <tr><td><%= link_to item.name, publics_items_show_path(item.id) %></td></tr>
             <tr><td><%= item.price %></td></tr>
            </table>
             <% end %>
            </div>
          </div>
        </div>
        </div>
  </div>
</main>
