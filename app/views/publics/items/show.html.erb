<main class="contianer">
  <div class="row">
       <table class="col-md-1 offset-md-1 border">
        <tr class="border"><th>ジャンル検索</th></tr>
        <tr><td>ケーキ</td></tr>
        <tr><td>焼き菓子</td></tr>
        <tr><td>プリン</td></tr>
      </table>
      <div class="col-md-2 offset-md-1">
         <%= image_tag @item.get_image %>
      </div>
        <div class="col-md-6 offset-md-1">
        <h1><%= @item.name %></h1>
        <div class="contianer">
          <div class="row">
              <table class="col-md-2">
             <tr><td><%= @item.introduction %></td></tr>
             <tr><td>￥<%= @item.price %>(税込)</td></tr>
             <% if user_signed_in? %>
             <tr><td>個数を選択</td></tr>
             <tr><td>カートに入れる</td></tr>
             <% end %>
            </table>
            </div>
          </div>
        </div>
  </div>
</main>
