<main class="contianer">
  <div class="row">
       <table class="col-md-2 offset-md-1 border">
        <tr class="border"><th>ジャンル検索</th></tr>
        <tr><td>ケーキ</td></tr>
        <tr><td>焼き菓子</td></tr>
        <tr><td>プリン</td></tr>
      </table>
      <div class="col-md-3 offset-md-1">
         <%= image_tag @item.get_image %>
      </div>
        <div class="col-md-4 offset-md-1">
        <h1><%= item.name %></h1>
        <div class="contianer">
          <div class="row">
              <% @item.each do |item| %>
              <table class="col-md-2">
             <tr><th><%= item.name %></th></tr>
             <tr><td><%= item.introduction %></td></tr>
             <tr><td><%= item.price %></td></tr>
             <% if user_signed_in? %>
             <tr><td>個数を選択</td></tr>
             <tr><td>カートに入れる</td></tr>
             <% end %>
            </table>
             <% end %>
            </div>
          </div>
        </div>
  </div>
</main>
