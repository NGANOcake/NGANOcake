<main class="contianer">
  <div class="row">
       <table class="col-md-1 offset-md-1 border">
        <tr class="border"><th>ジャンル検索</th></tr>
        <tr><td>ケーキ</td></tr>
        <tr><td>焼き菓子</td></tr>
        <tr><td>プリン</td></tr>
      </table>
      <div class="col-md-2 offset-md-1">
         <%= image_tag @item.get_image %>
      </div>
        <div class="col-md-6 offset-md-1">
        <h1><%= @item.name %></h1>
        <div class="contianer">
          <div class="row">
              <table class="col-md-2">
             <tr><td><%= @item.introduction %></td></tr>
             <tr><td>￥<%= @item.price %>(税込)</td></tr>
             <% if user_signed_in? %>
             <%= form_for @cart_item do |f| %>
             <tr><td>
             <%= f.hidden_field :item_id, value: @item.id %>
             <%= f.select :amount, CartItem.amount { |cart_item| [1..10]}, inculude_blank: "個数選択" %>
             </td></tr>
             <tr><td><%= f.submit "カートに入れる" %></td></tr>
             <% end %>
             <% end %>
            </table>
            </div>
          </div>
        </div>
  </div>
</main>
