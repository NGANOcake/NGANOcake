
<main class="contianer">
  <div class="row">
    <div width="90%", class="mx-auto">
      <h1>注文履歴一覧</h1>
      <table class="border">
        <tr class="border">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
        <tr class="border">
          <td><%= order.created_at.strftime('%y/%m/%d') %></td>
          <td class="border">〒<%= order.postal_code %><%= order.address %><%= order.name %></td>
          <td>
          <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %><br>
          <% end %>
          </td>
          <td class="border"><%= order.total_payment %></td>
          <td>入金確認</td>
          <td><%= link_to "表示する", publics_order_path(order.id), class: "btn btn-secondary" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</main>