
<main class="contianer">
  <div class="row">
    <div width="100%", class="mx-auto">
      <h1>注文履歴一覧</h1>
      <table class="border">
        <tr class="border">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
        <% @order_details.each do |order_detail| %>
        <tr class="border">
          <td><%= order_detail.order.created_at.strftime('%y/%m/%d') %></td>
          <td class="border">〒<%= order_detail.order.postal_code %><%= order_detail.order.address %><%= order_detail.order.name %></td>
          <td><%= order_detail.item.name %></td>
          <td class="border"><%= order_detail.order.total_payment %></td>
          <td>入金確認</td>
          <td><%= link_to "表示する", publics_order_path(order_detail.id), class: "btn btn-secondary" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</main>