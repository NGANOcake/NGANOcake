<main class="cantianer">
<h1>注文情報確認</h1>
<div class="row">
<table class="col-md-5 offset-md-1 border">
<% total = 0 %>
<tr><th>用品名</th><th class="border">単価(税込)</th><th>数量</th><th class="border">小計</th></tr>
<% @cart_items.each do |cart_item| %>
<tr>
<td class="border"><%= cart_item.item.name %></td>
<td><%= cart_item.item.taxin_price %></td>
<td class="border"><%= cart_item.amount %></td>
<% subtotal = cart_item.taxin_price * cart_item.amount %>
<td><%= subtotal %></td>
<% total += subtotal %>
</tr>
<% end %>
</table>
<table class="col-md-3 offset-md-1 border">
<tr>
    <th class="border">送料</th>
    <td>800</td>
</tr>
<tr>
    <th>商品合計</th>
    <td class="border"><%= total %></td>
</tr>
<tr>
    <th class="border">請求金額</th>
    <td><%= total + 800 %></td>
</tr>
</table>
<div class="col-md-2"></div>
</div>

<div class="contianer">
<div class="row">
<table class="col-md-5 offset-md-1">
<tr><th>支払い方法</th></tr>
<tr><td><%= @order.payment_method_i18n %></td></tr>
<tr><th>お届け先</th></tr>
<tr><td><%= @order.address_display %><%= @order.name %></td></tr>
</table>
<%= form_with model: @order, url: publics_orders_path do |f| %>
<%= f.hidden_field :name %>
<%= f.hidden_field :postal_code %>
<%= f.hidden_field :address %>
<%= f.hidden_field :payment_method %>
<%= f.hidden_field :total_payment, value: @total %>
<%= f.submit "注文を確定する" %>
<% end %>
</div>
</div>
</main>