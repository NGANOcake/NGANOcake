<main width="90%", class="container">
  <div class="row">
    <div width="90%", class="mx-auto">
      <h1 class="bg-light">ショッピングカート</h1>
      </div>
      </div>
      <%= link_to "カートを空にする", publics_cart_items_index_path %>
      <div class="container">
      <div class="row">
      <table width="100%", class="mx-auto border">
        <tr class="bg-light border"><th>商品名</th><th>単価(税込)</th><th>数量</th><th>小計</th><th></th></tr>
        <% @cart_items.each do |cart_item| %>
        <tr class="border"><td class="border"><%= cart_item.item_id.name %></td><td class="border"><%= cart_item.item_id.price %></td><td class="border"><%= cart_item.amount %></td><td class="border">お金</td><td class="border">削除する</td></tr>
        <% end %>
      <tr><td class="border"><%= link_to "買い物を続ける", publics_cart_items_index_path %></td><td></td><td></td><td></td><th class="border">合計金額</th><td class="border"></td></tr>
      </table>
      <%= link_to "情報入力に進む", publics_cart_items_index_path %>
    </div>
  </div>
</main>
