<main class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>ショッピングカート</h1>
      <%= link_to "カートを空にする", publics_cart_items_index_path %>
      <table class="border">
        <tr><th>商品名</th><th>単価(税込)</th><th>数量</th><th>小計</th><th></th></tr>
        <% @cart_items.each do |cart_item| %>
        <tr><td><%= cart_item.item_id.name %></td><td><%= cart_item.item_id.price %></td><td><%= cart_item.amount %></td><td>お金</td><td>削除する</td></tr>
        <% end %>
      <tr><td><%= link_to "買い物を続ける", publics_cart_items_index_path %></td><td></td><td></td><td></td><th>合計金額</th><td></td></tr>
      </table>
      <%= link_to "情報入力に進む", publics_cart_items_index_path %>
    </div>
  </div>
</main>
