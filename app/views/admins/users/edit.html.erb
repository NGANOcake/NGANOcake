<main class="container">
  <div class="row">
  <div width="90%", class="mx-auto">
  <h1 class="bg-light"><%= @user.first_name %>さんの会員詳細</h1>
    <%= form_with model: @user, url: admins_user_path do |f| %>
    <table>
    <tr>
      <th>会員ID</th>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= f.text_field :first_name %> <%= f.text_field :last_name %></td>
    </tr>
    <tr>
      <th>ふりがな</th>
      <td><%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>ステータス</td>
    </tr>
  </table>
  <%= f.submit "変更を保存", class: "btn btn-secondary" %>
    <% end %>
  </div>
  </div>
</main>
