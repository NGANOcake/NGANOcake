<main class="container">
  <div class="row">
  <div class="mx-auto">
  <h1 class="bg-light"><%= @user.first_name %>さんの会員詳細</h1>
  <table>
    <tr class="bg-light">
      <th>会員ID</th>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @user.first_name %><%= @user.last_name %></td>
    </tr>
    <tr>
      <th>ふりがな</th>
      <td><%= @user.first_name_kana %><%= @user.last_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @user.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @user.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @user.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>ステータス</td>
    </tr>
  </table>
  <div class="btn btn-dark"><%= link_to "編集する", edit_admins_user_path(@user.id) %></div>
  <div class="btn btn-dark"><%= link_to "注文履歴一覧に戻る", admins_orders_path %></div>
  </div>
  </div>
</main>
