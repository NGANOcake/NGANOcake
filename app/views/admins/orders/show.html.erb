<main>
<h1 class="bg-light"><%= @order.user.first_name %><%= @order.user.last_name %>さんの注文履歴</h1>
<div class="continer">
  <div class="row">
<table width="90%", class="mx-auto">
<tr class="bg-light">
  <th >購入日時</th>
  <th >注文個数</th>
  <th >注文ステータス</th>
</tr>
<tr>
<% @orders.each do |order| %>
<td><%= link_to order.created_at.strftime(' %Y/%m/%d '),  admins_order_detail_path(order.id) %></td>
<td>
  <% amount_sum = [] %>
  <% order.order_details do |order_detail| %>
  <% amount_sum << order_detail.amount %>
  <% end %>
  <%= amount_sum.sum %>
</td>
<td>ステータス</td>
</tr>
<% end %>
</table>
</div>
</div>
</main>
