<main>
<h1><%= @user.first_name %><%= @user.last_name %>さんの注文履歴</h1>
<div class="continer">
  <div class="row">
<table width="90%", class="mx-auto">
<tr>
  <th >購入日時</th>
  <th >注文個数</th>
  <th >注文ステータス</th>
</tr>
<tr>
<% @orders.each do |order| %>
<td><%= link_to order.created_at.strftime(' %Y/%m/%d '), admins_orders_path %></td>
<td><%= order.order_detail.amount %></td>
<td>ステータス</td>
</tr>
<% end %>
</table>
</div>
</div>
</main>
