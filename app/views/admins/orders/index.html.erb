<main>
<h1 class="bg-light">注文履歴一覧</h1>
<div class="continer">
  <div class="row">
<table width="90%", class="mx-auto">
<tr class="bg-light">
  <th >購入日時</th>
  <th >購入者</th>
  <th >注文個数</th>
  <th >注文ステータス</th>
</tr>
<tr>
<% @orders.each do |order| %>
<td><%= link_to order.created_at.strftime(' %Y/%m/%d '), admins_order_path(order.id) %></td>
<td><%= order.name %></td>
<td>
  <% amount_sum = [] %>
  <% order.order_details.each do |order_detail| %>
  <% amount_sum << order_detail.amount %>
  <% end %>
  <%= amount_sum.sum %>
</td>
<td>ステータス</td>
</tr>
<% end %>
</table>
</div>
</div>
</main>
