<main>
<h1>注文履歴一覧</h1>
<div class="continer">
  <div class="row">
<table width="90%", class="mx-auto">
<tr>
  <th >購入日時</th>
  <th >購入者</th>
  <th >注文個数</th>
  <th >注文ステータス</th>
</tr>
<tr>
<% @orders.each do |order| %>
<td><%= link_to order.created_at.strftime(' %Y/%m/%d '), admins_order_path(order.id) %></td>
<td><%= order.name %></td>
<td><%= order.order_detail.amount %></td>
<td>ステータス</td>
</tr>
<% end %>
</table>
</div>
</div>
</main>
