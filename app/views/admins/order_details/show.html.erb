<main class="container">
  <div class="row">
  <div width="90%", class="mx-auto">
  <h1 class="bg-light">注文詳細画面</h1>
  <table>
    <tr>
      <th>購入者</th>
      <td><%= link_to @user.first_name, admins_user_path(@user.id) %><%= @user.last_name %></td>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime(' %Y/%m/%d ') %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td><%= @user.address %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td>銀行振込</td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td>ステータス</td>
    </tr>
  </table>
  <div class="container">
  <div class="row">
  <table class="col-md-7">
    <tr class="bg-light">
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
    </tr>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.price*1.1 %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.order.total_payment %></td>
      <td>ステータス</td>
    </tr>
    <% end %>
  </table>
  <table class="col-md-5">
    <tr>
      <th>商品合計</th>
      <td><%= @order.total_payment %></td>
    </tr>
    <tr>
      <th>送料</th>
      <td>800</td>
    </tr>
    <tr>
      <th>請求金額合計</th>
      <th><%= @order.total_payment+800 %></th>
    </tr>
  </table>
  </div>
  </div>
</main>