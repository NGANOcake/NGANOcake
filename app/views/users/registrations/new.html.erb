<main class="cotianer">
<div class="row">
<div class="mx-auto">
<h1>新規会員登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
    <table>
  <div class="field">
  <tr>
    <th><%= f.label "名前" %></th>
    <td>（姓）<%= f.text_field :first_name %>（名）<%= f.text_field :last_name %></td>
  </div>
  </tr>
  <tr>
  <div class="field">
  <th><%= f.label "フリガナ" %></th>
  <td>（セイ）<%= f.text_field :first_name_kana %>（メイ）<%= f.text_field :last_name_kana %></td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <th><%= f.label "メールアドレス" %></th>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </div>
  </tr>
  <tr>
    <div class="field">
      <th><%= f.label "郵便番号" %></th>
      <td><%= f.text_field :postal_code %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <th><%= f.label "住所" %></th>
      <td><%= f.text_field :address %></td>
    </div>
  </tr>
  <tr>
    <div class="">
      <th><%= f.label "電話番号" %></th>
      <td><%= f.text_field :telephone_number %></td>
    </div>
  </tr>
  <tr>
  <div class="field">
    <th><%= f.label "パスワード（６文字以上）" %></th>
    <td>

    <%= f.password_field :password, autocomplete: "new-password" %>
    </td>
  </div>
  </tr>
  <div class="field">
    <th><%= f.label "パスワード（確認用）" %></th>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </div>
  <tr>
    <div class="actions">
    <th><%= f.submit "新規登録" %></tr>
  </div>
  </tr>
<% end %>
</table>
<h2>すでに登録済みの方</h2>
<div><%= link_to "こちら", new_user_session_path %>からログインしてください。</div>
</div>
</div>
</main>